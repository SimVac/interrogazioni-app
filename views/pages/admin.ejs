<!DOCTYPE html>
<html lang="en" data-theme="lofi">
  <head>
    <%- include('../partials/head', {title: "Admin"}) %>
  </head>
  <body>
    <div class="hero min-h-screen bg-base-200">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <div class="flex justify-center items-center">
            <img src="wip.png" alt="wip" height="100" width="100" />
          </div>
          <br />
          <h1 class="text-3xl font-bold">Modifica la materia</h1>
          <br />
          <br />
          <div class="grid grid-cols-2 gap-4 place-content-center">
            <% for (materia of materie) { %>
            <button
              class="btn btn-primary m-0.5"
              onclick="location.href = '/materiaadmin/<%= materia.endpoint %>'"
            >
              <%= materia.abbreviazione %>
            </button>
            <% } %>
          </div>
          <br />
          <br />
        </div>
      </div>
    </div>
    <%- include('../partials/navbar') %>
  </body>
</html>
